<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/CardView.Light"
    android:id="@+id/penalty_card"
    app:cardCornerRadius="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp">

    <android.support.constraint.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/label_resolutionnumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/label_resolutionnumber"
            android:textSize="@dimen/text_smallplus"
            android:gravity="top"
            android:paddingTop="@dimen/default_padding_8"
            android:paddingLeft="@dimen/default_padding_16"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_resolutionnumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_big"
            android:textStyle="bold"
            android:textColor="@color/textDark"
            android:gravity="end"
            tools:text="123456789"
            android:paddingTop="@dimen/default_padding_8"
            android:paddingRight="@dimen/default_padding_16"
            app:layout_constraintTop_toTopOf="@+id/label_resolutionnumber"
            app:layout_constraintStart_toEndOf="@+id/label_resolutionnumber"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/label_penaltydate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/label_penaltydate"
            android:textSize="@dimen/text_smallplus"
            android:paddingTop="@dimen/default_padding_8"
            android:paddingLeft="@dimen/default_padding_16"
            app:layout_constraintTop_toBottomOf="@+id/tv_resolutionnumber"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_penaltydate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_big"
            android:textStyle="bold"
            android:textColor="@color/textDark"
            android:gravity="end"
            tools:text="27.05.2017 17:52"
            android:paddingTop="@dimen/default_padding_8"
            android:paddingRight="@dimen/default_padding_16"
            app:layout_constraintTop_toTopOf="@+id/label_penaltydate"
            app:layout_constraintStart_toEndOf="@+id/label_penaltydate"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageButton
            android:id="@+id/delete_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/backgroundButton"
            android:padding="@dimen/button_padding"
            android:alpha="0.54"
            app:layout_constraintTop_toBottomOf="@+id/tv_penaltydate"
            app:layout_constraintEnd_toStartOf="@+id/payment_button"
            app:srcCompat="@drawable/ic_action_trash" />

        <ImageButton
            android:id="@+id/payment_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/backgroundButton"
            android:padding="@dimen/button_padding"
            android:alpha="0.54"
            app:layout_constraintTop_toBottomOf="@+id/tv_penaltydate"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/ic_action_creditcard" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>