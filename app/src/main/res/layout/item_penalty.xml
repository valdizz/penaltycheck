<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/CardView.Light"
    android:id="@+id/penalty_card"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="4dp">

    <android.support.constraint.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/label_resolutionnumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/label_resolutionnumber"
            android:textSize="@dimen/text_smallplus"
            android:layout_marginTop="@dimen/default_padding_8"
            android:layout_marginLeft="@dimen/default_padding_16"
            android:layout_marginStart="@dimen/default_padding_16"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_resolutionnumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:textColor="@color/textDark"
            android:textSize="@dimen/text_big"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/payment_button"
            app:layout_constraintStart_toStartOf="@+id/label_resolutionnumber"
            app:layout_constraintTop_toBottomOf="@+id/label_resolutionnumber"
            tools:text="123456789" />

        <TextView
            android:id="@+id/label_penaltydate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_padding_4"
            android:text="@string/label_penaltydate"
            android:textSize="@dimen/text_smallplus"
            app:layout_constraintStart_toStartOf="@+id/tv_resolutionnumber"
            app:layout_constraintTop_toBottomOf="@+id/tv_resolutionnumber" />

        <TextView
            android:id="@+id/tv_penaltydate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:textColor="@color/textDark"
            android:textSize="@dimen/text_big"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/payment_button"
            app:layout_constraintStart_toStartOf="@+id/label_penaltydate"
            app:layout_constraintTop_toBottomOf="@+id/label_penaltydate"
            tools:text="27.05.2017 17:52" />

        <ImageButton
            android:id="@+id/payment_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:alpha="0.54"
            android:background="@null"
            android:padding="@dimen/button_padding"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_action_creditcard" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>